<ui:SHDialogContentBase
    x:Class="SimHub.Plugins.ComputedProperties.Ui.PerformanceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:styles="clr-namespace:SimHub.Plugins.Styles;assembly=SimHub.Plugins"
    xmlns:ui="clr-namespace:SimHub.Plugins.UI;assembly=SimHub.Plugins"
    IsOkEnabled="True">

    <StackPanel>
        <styles:SHSubSectionTitle Content="Performance Data" />

        <styles:SHListBox ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ItemsSource="{Binding .}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Path=Key}" ContentStringFormat="{}function {0}()" FontWeight="Bold" />
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding Path=Value.Calls}" ContentStringFormat="{}Called: {0} times"
                                   Margin="0,0,10,0" />
                            <Label Content="{Binding Path=Value.Duration}" ContentStringFormat="{}Duration: {0:F3} ms/call"
                                   Margin="0,0,10,0" />
                            <Label Content="{Binding Path=Value.Skipped}" ContentStringFormat="{}Skipped: {0} times"
                                   Margin="0,0,10,0" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </styles:SHListBox>
    </StackPanel>
</ui:SHDialogContentBase>